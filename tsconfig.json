{
    "compilerOptions": {
        "target": "es2021",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": true,
        "moduleResolution": "Node",
        "strictFunctionTypes": true,
        "noImplicitThis": true
    },
    "lib": [
        "es2021.promise"
    ],
    "include": [
        "src/**/*.ts",
    ]
}